block variables

doctype html
html(lang='ru')
  head
    title= pageTitle
    meta(name="description", content=description)
    meta(name="theme-color" content="#ffffff")
    link(rel="icon" href=require("../../public/favicon.svg"))
    link(rel="shortcut icon" href=require("../../public/favicon.ico") type="image/x-icon")
  body(class= pageClass)
    #app
      header#header.app-header
        block header
      main#main.app-content
        block content
          block varContent
        block aside
      footer#footer.app-footer.p-4
        block footer